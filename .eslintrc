{
    "env":
    {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions":
    {
        "ecmaFeatures":
        {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules":
    {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "react/jsx-uses-vars": 2,
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "consistent-return": ["error",
        {
            "treatUndefinedAsUnspecified": true
        }],
        "react/jsx-filename-extension": [1,
        {
            "extensions": [".js", ".jsx"]
        }]
    }
}